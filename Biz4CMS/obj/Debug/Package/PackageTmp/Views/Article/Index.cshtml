</div>
@if (ViewBag.TotalPage > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @if (ViewBag.PageIndex > 1)
            {
                <li><a href='/article/?page=@(ViewBag.PageIndex - 1)@(ViewBag.CategoryID > 0 ? "&categoryid=" + ViewBag.CategoryID : "")'>
                    &laquo;</a></li>
            }
            @for (var i = 1; i <= ViewBag.TotalPage; i++)
            {
                
                <li class='@(ViewBag.PageIndex == i ? "active" : "")'><a href='/article/?page=@i@(ViewBag.CategoryID > 0 ? "&categoryid=" + ViewBag.CategoryID : "")' >@i</a>
                </li>       
            }
            @if (ViewBag.PageIndex < ViewBag.TotalPage)
            {
                <li><a href='/article/?page=@(ViewBag.PageIndex + 1)@(ViewBag.CategoryID > 0 ? "&categoryid=" + ViewBag.CategoryID : "")'>
                    &raquo;</a></li>
            }
        </ul>
    </div>
}