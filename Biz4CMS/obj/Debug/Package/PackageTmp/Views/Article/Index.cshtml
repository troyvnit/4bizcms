@model IEnumerable<Biz4CMS.ViewModels.BriefArticleDto>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 article_box">
            @if (item.Avatar != null)
            {
                <a href="/Article/Details/?id=@item.ArticleId">
                    <img  class="article-thumbnail"    src="@Url.Content(item.Avatar) " alt="@item.Title" />
                </a>
                
            }
            <div class="headline">
                <h3>@Html.ActionLink(item.Title, "Details", new { id = item.ArticleId })
                </h3>
            </div>
            <p>@item.Description</p>
        </div>   
