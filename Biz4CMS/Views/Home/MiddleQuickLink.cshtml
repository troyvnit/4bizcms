@model IEnumerable<Biz4CMS.Models.QuickLink>
<div class="row">
    @foreach (var lnk in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img alt="@lnk.Title" src="@Url.Content(@lnk.FullPath)">
                <div class="caption">
                    <h4>
                        <a href="@Url.Content(lnk.Link)">@lnk.Title </a>
                    </h4>
                    <p>
                        @lnk.Description
                    </p>
                    <p class="text-right padding-right-20">
                        <a  href="@Url.Content(lnk.Link)">Xem chi tiết</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
